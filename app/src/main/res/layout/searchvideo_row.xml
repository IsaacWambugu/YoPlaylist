<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="240dp">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/search_video_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"

                    />

                <TextView
                    android:id="@+id/search_video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:background="#99000000"
                    android:gravity="bottom|center_vertical|center_horizontal"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/addSearchVideoButton"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"


                    app:srcCompat="@drawable/fab_add" />

                <TextView
                    android:id="@+id/search_video_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:background="#4DDA27"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:paddingTop="5dp"
                    android:text="20:32"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/search_video_channel"
                android:layout_width="match_parent"
                android:layout_height="19dp"


                android:background="#99000000"

                android:gravity="bottom|center_horizontal"
                android:paddingBottom="2dp"
                android:text="TextView"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/search_video_views"
                android:layout_width="match_parent"
                android:layout_height="19dp"


                android:background="#99000000"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>